<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration>
  <log>
    <sink
      filter="%Severity% >= info and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="true" />
    <sink
      filter="%Severity% > debug and %Rank% = 0"
      format="---[precice] %ColorizedSeverity% %Message%"
      enabled="false" />
  </log>

  <data:vector name="Forces"/>
  <data:vector name="Displacements"/>

  <mesh name="Solid-Mesh" dimensions="3">
    <use-data name="Displacements"/>
    <use-data name="Forces"/>
  </mesh>

  <participant name="LPM">
    <receive-mesh name="Solid-Mesh" from="Calculix"/>
    <write-data name="Forces" mesh="Solid-Mesh"/>
    <read-data  name="Displacements" mesh="Solid-Mesh"/>
  </participant>

  <participant name="Calculix">
    <provide-mesh name="Solid-Mesh"/>
    <write-data name="Displacements" mesh="Solid-Mesh"/>
    <read-data  name="Forces" mesh="Solid-Mesh"/>
  </participant>

  <m2n:sockets acceptor="LPM" connector="Calculix" exchange-directory=".."/>

  <!-- <coupling-scheme:serial-explicit>
    <participants first="Calculix" second="LPM"/>
    <max-time value="20.0" />
    <time-window-size value="0.01"/>
    <exchange data="Displacements" mesh="Solid-Mesh" from="Calculix" to="LPM" initialize="false"/>
    <exchange data="Forces" mesh="Solid-Mesh" from="LPM" to="Calculix" initialize="false"/>
  </coupling-scheme:serial-explicit> -->

  <coupling-scheme:serial-implicit>
    <participants first="Calculix" second="LPM"/>
    <max-time value="20.0" />
    <time-window-size value="0.01" />
    <max-iterations value="20"/>
    <exchange data="Displacements" mesh="Solid-Mesh" from="Calculix" to="LPM" initialize="false"/>
    <exchange data="Forces" mesh="Solid-Mesh" from="LPM" to="Calculix" initialize="false"/>
    <relative-convergence-measure limit="1e-3" data="Forces" mesh="Solid-Mesh"/>
  </coupling-scheme:serial-implicit>

</precice-configuration>
